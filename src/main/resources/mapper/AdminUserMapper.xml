<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="ltd.newbee.mall.dao.AdminUserMapper">

    <resultMap id="AdminUserResult" type="ltd.newbee.mall.entity.AdminUser">
        <result property="adminUserId" column="admin_user_id" jdbcType="INTEGER"/>
        <result property="loginUserName" column="login_user_name" jdbcType="VARCHAR"/>
        <result property="loginPassword" column="login_password" jdbcType="VARCHAR"/>
        <result property="nickName" column="nick_name" jdbcType="VARCHAR"/>
        <result property="locked" column="locked" jdbcType="TINYINT"/>
    </resultMap>

    <sql id="Base_Column_List">
        admin_user_id, login_user_name, login_password, nick_name, locked
    </sql>

    <select id="login" resultMap="AdminUserResult">
        select
        <include refid="Base_Column_List"/>
        from tb_newbee_mall_admin_user
        where login_user_name = #{userName, jdbcType=VARCHAR} AND login_password=#{password, jdbcType=VARCHAR} AND locked
        = 0
    </select>

    <select id="getUserDetailById" resultMap="AdminUserResult">
        select
            <include refid="Base_Column_List"/>
        from tb_newbee_mall_admin_user
        where
            admin_user_id = #{loginUserId, jdbcType=VARCHAR}
        AND
            locked = 0
    </select>

</mapper>
